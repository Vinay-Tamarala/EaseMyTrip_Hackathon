<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite">
    <listeners>
        <listener class-name="utilities.ExtentReportManager"/>
    </listeners>
    <test name="Run testNG">
        <groups>
            <run>
                <include name="login"/>
            </run>
        </groups>
        <classes>
            <class name="testCases.LoginTest">
                <methods>
                    <include name="invalidMailCase"/>
                    <include name="invalidPasswordCase"/>
                    <include name="validLoginTestCase"/>
                </methods>
            </class>
            <class name="testCases.HomePageTest">
                <methods>
                    <include name="validateDefaultTravellerCount"/>
                    <include name="testSameFromAndTo"/>
                    <include name="testSwitchCity"/>
                    <include name="testValidDetails"/>
                    <include name="testRoundTripFunctionality"/>
                </methods>
            </class>
            <class name="testCases.FlightsTest">
                <methods>
                    <include name="flightCaseTest"/>
                    <include name="selectEmptyCoupon"/>
                    <include name="selectFlightDetailsCase"/>
                    <include name="payCases"/>
                </methods>
            </class>
            <class name="testCases.GiftCardTest">
                <methods>
                    <include name="testGiftCardPurchaseFlow"/>
                    <include name="testInvalidAmount"/>
                    <include name="testLaterButton"/>
                    <include name="testUnselectedLaterButton"/>
                </methods>
            </class>
            <class name="testCases.HotelsPageTest">
                <methods>
                    <include name="verifyMaxAdultCountFlow"/>
                    <include name="verifyHotelsNavigation"/>
                    <include name="verifyAdultCountNotZero"/>
                    <include name="verifyCheckInAndCheckOutAreNotSame"/>
                </methods>
            </class>
            <class name="testCases.MyBookingTest">
            <methods>
            <include name="verifyInvalidBookingDetails"/>
            </methods>
            </class>
        </classes>
    </test>
</suite>